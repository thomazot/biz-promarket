.products
    --border-color: #b2c0d6
    --border-hover-color: #ebebeb

    .owl-pagination
        display: none

    &__case
        border-radius: 3px
        box-shadow: none

        &:hover
            @media media-min-lg
                box-shadow: 0 0 0 1px var(--border-hover-color)

    &__title
        padding-top: 35px
        border-top: solid 1px var(--border-color)
        color: var(--secundary)
        font-weight: bold
        font-size: 20px

.product
    &__brand
        --color: #adb2bb

        &
            color: var(--color)
            font-weight: medium
            font-size: 12px

        a
            color: currentColor

            &:before
                content: attr(title)

        img
            display: none

    &__name
        color: var(--primary-hover)
        font-weight: bold
        font-size: 16px