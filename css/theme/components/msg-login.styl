.msg-login
    display: none
    align-items: center
    padding: 10px
    border-radius: 3px
    background: var(--secundary)
    color: var(--secundary-contrast)
    font-weight: bold
    font-size: 13px

    body:not(.user-logged) &
        display: flex

    .products__case:hover &
        background: var(--primary)

    .icon
        flex: 0 0 13px
        margin-right: 10px
        font-size: 14px

        .products__case:hover &
            color: var(--secundary)

    div
        flex: 1 1 0%