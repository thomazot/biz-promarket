.gallery
    margin-top: 50px

    &__title
        padding: 30px 0 20px
        border-top: solid 2px #b2c0d6
        color: var(--secundary)
        font-weight: bold
        font-size: 20px

    &__content
        display: flex
        flex-flow: row wrap
        justify-content: flex-start
        margin: -13px

        > *:not(img)
            display: contents

        img
            display: block
            flex: 1
            flex: 1 1 360px
            padding: 13px
            min-width: 0
            object-fit: contain