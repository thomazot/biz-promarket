.configurable
    &:before
        display: none

    &__caption
        label
            color: var(--primary-hover)
            font-weight: bold
            font-size: 16px

    &-swatch-list
        a
            border-radius: 3px

        .selected a
            background: none
            box-shadow: 0 0 0 2px var(--secundary)
            color: var(--primary)

    &-options
        padding-bottom: 20px