.toolbar
    .amount, .limiter, .sort-by label
        display: none

    .sort-by
        --background: #f3f3f3
        --color: #959595

        &
            position: relative
            width: 172px
            height: 46px
            border-radius: 3px
            background: var(--background)

        &:after
            icon('\f054')

            display: flex
            justify-content: center
            align-items: center
            width: 46px
            height: 46px
            color: var(--primary)
            font-size: 8px
            transform: rotate(90deg)

        select
            padding: 0 46px 0 15px
            width: 100%
            width: 100%
            height: 100%
            border: 0
            background: none
            box-shadow: none
            color: var(--color)
            font-weight: medium
            font-size: 12px
            cursor: pointer
            appearance: none