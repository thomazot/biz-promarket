.catalog-product-view
    --color: #717171

.prod
    &__img
        @media media-min-lg
            flex: 0 1 650px
            margin-right: 16px

    &__name
        h1
            color: var(--primary-hover)
            font-weight: bold
            font-size: 20px

        .sku
            color: var(--color)
            font-weight: medium
            font-size: 12px

    &__short-desc
        margin: 20px 0
        color: var(--color)
        font-weight: medium
        font-size: 13px

        h3
            margin-bottom: 10px
            color: var(--secundary)
            font-weight: bold
            font-size: 16px

    &__shop
        --old-price: #7f7f7f
        --border-color: #ecedf2

        @media media-min-lg
            padding: 20px
            border: solid 1px var(--border-color)
            border-radius: 2px

            .col
                display: flex
                flex: 1
                flex-flow: column nowrap
                min-width: 0

        .price-box
            margin: 0

            .old-price
                .label
                    display: none

                .price span
                    color: var(--old-price)
                    font-weight: medium
                    font-size: 18px

            .special-price, .regular-price
                .label
                    display: none

                .price span
                    color: var(--primary-hover)
                    font-weight: bold
                    font-size: 28px

        .price-box-avista
            display: none

        .price-box-parcelado
            --payment: #7f7f7f

            .preco-parcelado
                &:before
                    content: 'ou em '

            &, .num, .value span
                color: var(--payment)
                font-weight: medium
                font-size: 14px

        .qty-wrapper
            margin-right: 5px

        .add-to-cart-btn
            flex: 0 1 270px
            padding: 0
            width: auto
            height: 55px
            border: 0
            background: var(--secundary)
            box-shadow: none
            color: var(--secundary-contrast)
            font-weight: bold
            font-size: 18px
            line-height: 55px

            span
                line-height: 1

        .add-to-cart-buttons
            display: flex

        .frete
            @media media-min-lg
                margin-top: auto
                margin-right: -20px
                margin-bottom: -20px !important
                margin-left: -20px

    &__tabs
        --color: #7f7f7f

        &
            display: flex
            flex-flow: row wrap
            margin: -7px

        &-tab
            order: 1
            padding: 7px
            color: var(--primary-hover)
            font-weight: bold
            font-size: 16px

            &--actived
                color: var(--secundary)

        &-content
            display: none
            order: 2
            padding: 7px
            color: var(--color)
            font-weight: medium
            font-size: 13px

            p
                display: inline

            a
                color: var(--secundary)

            &--actived
                display: block

.product-image-gallery
    box-shadow: none

.product-image-thumbs
    .thumb-link
        img
            width: 90px
            height: 90px
            object-fit: cover

    li
        flex: 0 1 90px
        min-height: 0
        height: 90px

    .thumb-link
        box-shadow: none
        opacity: .5

        &:hover, &.on
            box-shadow: none
            opacity: 1